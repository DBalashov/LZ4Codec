<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net7.0;net8.0;net9.0</TargetFrameworks>
        <LangVersion>11</LangVersion>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        
        <AssemblyName>LZ4Codec</AssemblyName>
        <PackageId>LZ4Codec</PackageId>
        <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
        <Version>2024.11.26.0</Version>
        <AssemblyVersion>$(Version)</AssemblyVersion>
        <FileVersion>$(Version)</FileVersion>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <Description>LZ4 compression codec. MIT License</Description>
        <Authors>Denis Balashov, Milosz Krajewski and contributors</Authors>
        <RepositoryUrl>https://github.com/DBalashov/LZ4Codec</RepositoryUrl>
        <Copyright>Denis Balashov, Milosz Krajewski and contributors</Copyright>
        <PackageTags>C#, lz4, pack</PackageTags>
    </PropertyGroup>

</Project>
